NAME		= push_swap
INC			= -I./libft -I./mini
CC 			= cc
CFLAGS		= -Wall -Werror -Wextra -g -I.
RM 			= rm -f
SRCS 		= main.c ps_algo.c \
			moves/pushy.c \
			moves/rotate_backward.c \
			moves/rotate_forward.c \
			moves/sorty.c \
			moves/swappy.c \
			utils/basic_utils.c \
			utils/clean_utils.c \
			utils/list_utils.c \
			utils/parse_utils.c \
			utils/plan_utils.c \

SRCS_OBJ	=	$(SRCS:.c=.o)

#	RULES	#

all: $(NAME)

$(NAME): $(SRCS)
		make -C libft
		$(CC) $(CFLAGS) -Ilibft $(SRCS) -lm -lz -Llibft -lft -o $(NAME)
		@$(MAKE) text
		@$(MAKE) luna

clean:
		@$(MAKE) txtcln

fclean: clean
		$(RM) $(NAME)
		@$(MAKE) txtfcln

re: fclean all

.PHONY: all clean fclean re
.SILENT:

text:
	@echo -e '\033[1;95müåôIn the name of the moon, compile $(NAME) ‚ú®\033[0m'

txtcln:
	@echo -e '\033[1;94mPartially cleaned $(NAME)üßº \033[0m'

txtfcln:
	@echo -e '\033[1;91mFully cleaned $(NAME)üßΩ \033[0m'

