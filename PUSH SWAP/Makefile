#-I. is used to include the header files in the current directory

NAME		= pushswap.a
INC			= -I./libft
LIBFTPATH 	= ./libft
CC 			= cc
CFLAGS		= -Wall -Werror -Wextra -g #-I.
RM 			= rm -f
LIBCMP		= ar -rcs
SRCS		= push_swap.c pushy.c swappy.c utils.c lists.c 
			
SRC_OBJ		=	$(SRCS:.c=.o)

#	RULES	#
%.o: %.c
		$(CC) $(CFLAGS) -c $< -o $@ 

all: $(NAME)

$(NAME): $(SRC_OBJ)
		$(MAKE) -C $(LIBFTPATH)
		@cp $(LIBFTPATH)/libft.a $(NAME)
		$(LIBCMP) $(NAME) $(SRC_OBJ)
		@$(MAKE) text
		@$(MAKE) luna

clean:
		$(MAKE) clean -C $(LIBFTPATH)
		$(RM) $(SRC_OBJ)
		@$(MAKE) txtcln

fclean: clean
		$(RM) $(NAME)
		@$(MAKE) fclean -C $(LIBFTPATH)
		@$(MAKE) txtfcln

re: fclean all

.PHONY: all clean fclean re
.SILENT: 

#personal junk
text:
	@echo -e '\033[1;95m🌙In the name of the moon, compile $(NAME) ✨\033[0m'

txtcln:
	@echo -e '\033[1;94mPartially cleaned $(NAME)🧼 \033[0m'

txtfcln:
	@echo -e '\033[1;91mFully cleaned $(NAME)🧽 \033[0m'

luna:
